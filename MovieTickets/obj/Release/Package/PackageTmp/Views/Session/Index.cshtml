@model IEnumerable<MovieTickets.Models.Cinema>

@{
    ViewBag.Title = "Кинотеатры";
}

<h2>Роли</h2>
@Html.ActionLink("Create", "CreateCinema")
<br />
<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name </td>
            <td>@item.Description</td>
            <td>
                @Html.ActionLink("Add movie", "SelectMovie", new { id = item.Id }) |
                @Html.ActionLink("Список фильмов", "MovieList", new { id = item.Id }) |
                @Html.ActionLink("Edit", "EditCinema", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteCinema", new { id = item.Id }) |
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("К списку фильмов", "Index", "Home")
</div>


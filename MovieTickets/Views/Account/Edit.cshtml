@model MovieTickets.Models.Account.EditModel

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать данные профиля</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "")
        <div>
            <p>Name: @Html.EditorFor(model => model.Name)</p>
        </div>

        <div>
            <p>Email: @Html.EditorFor(model => model.Email )</p>
        </div>

        <div>
            <p>PhoneNumber: @Html.EditorFor(model => model.PhoneNumber )</p>
        </div>

        <div>
            <div>
                <input type="submit" value="Сохранить" />
            </div>
        </div>
    </div>
}

